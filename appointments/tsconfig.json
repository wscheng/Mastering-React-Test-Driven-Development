{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "types": ["jest"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
